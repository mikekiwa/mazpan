	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.collections.ArrayCollection;
			import eventos.ComplexEvent;
		
			[Bindable]
			public static var nombre:String = "AgregarMaquina";
			[Bindable]
			private var componentesSistema_ac:ArrayCollection = new ArrayCollection();
			[Bindable]
			private var componentes_ac:ArrayCollection = new ArrayCollection();
			[Bindable]
			private var tipoMaquina_ac:ArrayCollection = new ArrayCollection(["Horno","Aire","Cortadora","Compresor","Otro"]);
			[Bindable]
			private var pais_ac:ArrayCollection = new ArrayCollection(["Chile","Argentina","Colombia","Japon","Otro"]);
			[Bindable]
			private var especificaciones_ac:ArrayCollection = new ArrayCollection();
			[Bindable]
			private var especificacion_ac:ArrayCollection = new ArrayCollection(["Voltaje","Peso","Amperaje","Frecuencia","Alto","Ancho","Otro"]);
			[Bindable]
			private var mantenciones_ac:ArrayCollection = new ArrayCollection();
			[Bindable]
			private var tipoMantencion_ac:ArrayCollection = new ArrayCollection(["Preventiva","Correctiva", "Otro"]);
			[Bindable]
			private var frecuencia_ac:ArrayCollection = new ArrayCollection(["Diario","Semanal","Quincenal","Mensual","Anual","Otro"]);
			[Bindable]
			private var planta_ac:ArrayCollection = new ArrayCollection(["Planta 1","Planta 2"]);
			[Bindable]
			private var estado_ac:ArrayCollection = new ArrayCollection(["En Uso","En Bodega"]);
			[Bindable]
			private var recepcion_ac:ArrayCollection = new ArrayCollection(["Nueva","Usada"]);
			
			private function init():void
			{
				var item1:Object = new Object();
				item1.actividad = "Actividad 1";
				item1.mantencion = "Correctiva";
				item1.frecuencia = "Mensual";
				mantenciones_ac.addItem(item1);
				
				var item2:Object = new Object();
				item2.actividad = "Actividad 2";
				item2.mantencion = "Preventiva";
				item2.frecuencia = "Anual";
				mantenciones_ac.addItem(item2);
				
				var item01:Object = new Object();
				item01.nombre = "Cadena";
				item01.codigo = "CM001";
				item01.descripcion = "Descripcion de la cadena";
				componentesSistema_ac.addItem(item01);
				
				var item02:Object = new Object();
				item02.nombre = "Motor";
				item02.codigo = "MQ002";
				item02.descripcion = "Descripcion del motor";
				componentesSistema_ac.addItem(item02);
			}
			
			private function onClick(event:String):void
			{
				var maquina:Object = null;
				if(event=="agregar")
				{
					maquina = new Object();
					maquina.nombre = nombre_ti.text;
					maquina.codigo = codigo_ti.text;
					maquina.descripcion = descripcion_ta.text;
				}
				
				dispatchEvent(new ComplexEvent(ComplexEvent.MENU_CLICK, "", nombre, maquina));
			}
			
			private function agregarEspecificacion():void
			{
				var item:Object = new Object();
				if(especificacion_cb.visible) item.especificacion = especificacion_cb.text;
				else item.especificacion = especificacion_ti.text;
				item.valor = valor_ti.text;
				especificaciones_ac.addItem(item);
				valor_ti.text = "";
			}
			
			private function agregarActividadMantencion():void
			{
				var item:Object = new Object();
				item.actividad = actividad_ti.text;
				if(tipoMantencion_cb.visible) item.mantencion = tipoMantencion_cb.text;
				else  item.mantencion = tipoMantencion_ti.text;
				if(frecuencia_cb.visible) item.frecuencia = frecuencia_cb.text;
				else item.frecuencia = frecuencia_ti.text;
				mantenciones_ac.addItem(item);
			}
			
			private function actualizarTipoMantecion():void
			{
				tipoMantencion_ti.text = "";
				if(tipoMantencion_cb.text=="Otro"){tipoMantencion_cb.visible=false; tipoMantencion_ti.visible=true; cancelarTipoMantencion_btn.visible=true;} 
				else {tipoMantencion_cb.visible=true; tipoMantencion_ti.visible=false; cancelarTipoMantencion_btn.visible=false;}
			}
			
			private function actualizarFrecuencia():void
			{
				frecuencia_ti.text = "";
				if(frecuencia_cb.text=="Otro"){frecuencia_cb.visible=false; frecuencia_ti.visible=true; cancelarFrecuencia_btn.visible=true;} 
				else{frecuencia_cb.visible=true; frecuencia_ti.visible=false; cancelarFrecuencia_btn.visible=false;}
			}
			
			private function actualizarPais():void
			{
				pais_ti.text = "";
				if(pais_cb.text=="Otro"){pais_cb.visible=false; pais_ti.visible=true; cancelarPais_btn.visible=true;} 
				else{pais_cb.visible=true; pais_ti.visible=false; cancelarPais_btn.visible=false;}
			}
			
			private function actualizarTipo():void
			{
				tipo_ti.text = "";
				if(tipo_cb.text=="Otro"){tipo_cb.visible=false; tipo_ti.visible=true; cancelarTipo_btn.visible=true;} 
				else{tipo_cb.visible=true; tipo_ti.visible=false; cancelarTipo_btn.visible=false;}
			}
			private function actualizarEspecificacion():void
			{
				especificacion_ti.text = "";
				if(especificacion_cb.text=="Otro"){especificacion_cb.visible=false; especificacion_ti.visible=true; cancelarEspecificacion_btn.visible=true;} 
				else{especificacion_cb.visible=true; especificacion_ti.visible=false; cancelarEspecificacion_btn.visible=false;}
			}
			
			private function arriba():void
			{
				if(mantenciones_dg.selectedIndex!=-1)
				{
					var itemIndex:int = mantenciones_dg.selectedIndex;
					var item:Object = mantenciones_ac.removeItemAt(itemIndex);
					if( itemIndex == 0) itemIndex = mantenciones_ac.length;
					else itemIndex = (itemIndex - 1) % (mantenciones_ac.length+1);
					mantenciones_ac.addItemAt(item, itemIndex);
				}
			}
			
			private function abajo():void
			{
				if(mantenciones_dg.selectedIndex!=-1)
				{
					var itemIndex:int = mantenciones_dg.selectedIndex;
					var item:Object = mantenciones_ac.removeItemAt(itemIndex);
					mantenciones_ac.addItemAt(item, (itemIndex + 1) % (mantenciones_ac.length+1));
				}
			}
			
			private function agregarComponente():void
			{
				if(componentesSistema_dg.selectedIndex!=-1) componentes_ac.addItem(componentesSistema_ac.getItemAt(componentesSistema_dg.selectedIndex));
			}
			private function eliminarComponente():void
			{
				if(componentes_dg.selectedIndex!=-1) componentes_ac.removeItemAt(componentes_dg.selectedIndex);
			}
			
		]]>
	</mx:Script>
